@model List<AssignRoleViewModel>
@{
    ViewData["Title"] = "AddOrRemoveRoles";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var roleName=ViewData["RoleName"];
    var roleId=ViewData["RoleId"];
}

<h1>AddOrRemoveRoles @roleName </h1>

<input  type="hidden" asp-for="@roleId" />


<form class="form-control" method="post" asp-controller="Roles" asp-action="AddOrRemoveRoles" enctype="multipart/form-data">
 <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @for(int i = 0; i < Model.Count; i++)
{
    <div class=" border border-dark border-3 mt-3">
    <div class="row m-3 text-center">
        <div class="col-md-4">
                <div class="form-check">
                    <input class=" form-check-input" type="checkbox" asp-for="@Model[i].IsChecked" />
                </div>
        </div>
        <div class="col-md-4 lead">

                <label class="form-label"> UserName: </label>
                <label class="form-label" asp-for="@Model[i].UserName">@Model[i].UserName</label>
        </div>
        <div class="col-md-4 lead">
                <label class="form-label"> FirstName:</label>
                <label class="form-label" asp-for="@Model[i].FirstName">@Model[i].FirstName</label>
        </div>
    </div>
    </div>
        <input  type="hidden" asp-for="@Model[i].UserName" readonly/>
        <input type="hidden" asp-for="@Model[i].FirstName" readonly />
        <input type="hidden" asp-for="@Model[i].Id" readonly />

}

    <div class="form-group my-3">

        <input type="submit" value="Save" class="btn btn-success" />
        <a class="btn btn-primary" asp-controller="Roles" asp-action="Index">Back to List</a>
    </div>
    
</form>
