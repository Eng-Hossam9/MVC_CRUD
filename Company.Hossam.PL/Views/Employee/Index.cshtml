@model IEnumerable<EmployeeViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>All Employees</h1>


<form  asp-action="Index">
    <div class="row">

        <div class="col-md-8">
            <input type="type" name="searchInput" value="" placeholder="Search by Name" class="form-control" />
        </div>
        <div class="col-md-4">
            <input class="btn btn-success" value="Search" type="submit"/>
        </div>
    </div>

</form>

<a asp-controller="Employee" asp-action="Create" class="my-5 btn btn-primary">Add Employee</a>


@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover text-center">

        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Age
                </th>
                <th>
                    Address
                </th>
                <th>
                    Salary
                </th>
                <th>
                    Email
                </th>
                <th>
                    PhoneNumber
                </th>
                <th>
                    HiringDate
                </th>
                <th>
                    Department_Name
                </th>

                <th>
                    Details
                </th>
                <th>
                    Update
                </th>
                <th>
                    Delete
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var Emp in Model)
            {
                <tr>
                    <td>@Emp.Name</td>
                    <td>@Emp.Age</td>
                    <td>@Emp.Address</td>
                    <td>@Emp.Salary</td>
                    <td>@Emp.Email</td>
                    <td>@Emp.PhoneNumber</td>
                    <td>@Emp.HiringDate</td>
                    <td>@Emp?.WorkFor?.Name</td>

                    <td>
                        <a asp-controller="Employee" asp-route-id="@Emp.Id" asp-action="Details" class="btn btn-warning">Details</a>
                    </td>
                    <td>
                        <a asp-controller="Employee" asp-route-id="@Emp.Id" asp-action="Update" class="btn btn-success">Update</a>
                    </td>
                    <td>
                        <form asp-controller="Employee" asp-action="Delete" asp-route-id="@Emp.Id" method="post" style="display:inline;">
                            @Html.AntiForgeryToken() <!-- CSRF protection -->
                            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this department?');">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class=" alert alert-danger">
        <h4>NO Data </h4>
    </div>
}