@model EmployeeViewModel

@{
    ViewData["Title"] = "Update";
}

<h1>Update</h1>

<h4>Employees</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form class="form-control" method="post" asp-controller="Employee" asp-action="Update" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @if (!string.IsNullOrEmpty(Model.ImageName))
            {
                <div class="form-group my-3">
                    <label>Current Image:</label><br />
                    <img src="~/Files/Images/@Model.ImageName" alt="Employee Image" width="150px" class="img-fluid rounded-circle" />
                </div>

                <input type="hidden"asp-for="ImageName" value="@Model.ImageName" />


            }

           

            <partial name="CreateUpdatePartialViewEmployee" model="Model" />

         

            <div class="form-group my-3">
                <label asp-for="Image" class="control-label"></label>
                <input type="file" asp-for="Image"  class="form-control" />
            </div>


            <div class="form-group my-3">
            
                <input type="submit" value="Save" class="btn btn-success" /> 
                <a class="btn btn-primary" asp-controller="Employee" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


@section Validation {

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

